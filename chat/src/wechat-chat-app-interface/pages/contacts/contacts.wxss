/* pages/contacts/contacts.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: white;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
}

.icon-search {
  color: #999;
  font-size: 30rpx;
  margin-right: 15rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}

.placeholder {
  color: #999;
}

/* 联系人列表 */
.contacts-list {
  flex: 1;
  overflow-y: auto;
}

.contacts-group {
  margin-bottom: 20rpx;
  background-color: white;
}

.group-title {
  padding: 15rpx 25rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
}

/* 联系人项 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #eee;
}

.avatar-container {
  position: relative;
  margin-right: 25rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
}

.online-indicator {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 28rpx;
  height: 28rpx;
  background-color: #07c160;
  border: 4rpx solid white;
  border-radius: 50%;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.name-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 22rpx;
  color: #999;
}

.last-msg-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.last-msg {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.unread-count {
  min-width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #ff3b30;
  color: white;
  font-size: 24rpx;
  text-align: center;
  border-radius: 20rpx;
  margin-left: 15rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5rpx 15rpx rgba(7, 193, 96, 0.4);
}

.icon-add {
  color: white;
  font-size: 50rpx;
}
    