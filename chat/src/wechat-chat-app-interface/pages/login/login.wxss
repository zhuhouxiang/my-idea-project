/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 20rpx;
}

.login-box {
  width: 100%;
  max-width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  display: block;
  margin-top: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.slogan {
  margin: 60rpx 0 80rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.agreement {
  margin-top: 60rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.link {
  color: #007aff;
  text-decoration: underline;
}
    