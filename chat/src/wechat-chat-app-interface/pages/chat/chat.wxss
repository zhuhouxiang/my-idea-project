/* pages/chat/chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 消息区域 */
.message-container {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.loading-history {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 0;
  font-size: 24rpx;
  color: #999;
}

.loading-history text {
  margin-left: 10rpx;
}

.time-divider {
  text-align: center;
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #999;
  background-color: #e5e5e5;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  display: inline-block;
  align-self: center;
}

.message-list {
  display: flex;
  flex-direction: column;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 25rpx;
  max-width: 80%;
  align-items: flex-end;
}

.message-item.left {
  align-self: flex-start;
}

.message-item.right {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
}

.message-item.left .avatar {
  margin-right: 15rpx;
}

.message-item.right .avatar {
  margin-left: 15rpx;
}

.message-content {
  position: relative;
  max-width: calc(100% - 90rpx);
}

.message-item.left .message-content {
  background-color: white;
  border-radius: 10rpx 15rpx 15rpx 10rpx;
}

.message-item.right .message-content {
  background-color: #95ec69;
  border-radius: 15rpx 10rpx 10rpx 15rpx;
}

.text {
  display: inline-block;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.image-content {
  padding: 5rpx;
}

.image-content image {
  max-width: 250rpx;
  max-height: 250rpx;
  border-radius: 5rpx;
}

.message-time {
  font-size: 20rpx;
  color: #999;
  margin: 0 10rpx;
}

/* 输入区域 */
.input-area {
  background-color: white;
  border-top: 1rpx solid #eee;
}

.tool-bar {
  display: flex;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tool-item {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 34rpx;
}

.emoji-panel {
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
  max-height: 250rpx;
  overflow-y: auto;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
}

.emoji-item {
  width: 14%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
}

.message-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  min-height: 60rpx;
  max-height: 180rpx;
  line-height: 30rpx;
  overflow-y: auto;
}

.send-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #07c160;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin-left: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.send-btn::after {
  border: none;
}

.send-btn:disabled {
  background-color: #ccc;
}
    